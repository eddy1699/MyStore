<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroManualActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="56dp"
                android:fontFamily="casual"
                android:text="Registro de Productos"
                android:textAlignment="center"
                android:textColor="#2196F3"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/btnRegistrarProds"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/btnBuscarProducto"
                style="@style/botonNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:background="@drawable/shape"
                android:fontFamily="casual"
                android:text="Escanear Codigo de Barra"
                android:textAlignment="center"
                app:layout_constraintBottom_toTopOf="@+id/tviniRegistrarse"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.486"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etiniPass"
                app:layout_constraintVertical_bias="0.0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/etCodBarra"
                    android:layout_width="213dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="32dp"
                    android:ems="10"
                    android:fontFamily="casual"
                    android:hint=""
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/btnBuscarCodBarBD"
                    style="@style/botonNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="48dp"
                    android:background="@drawable/shape"
                    android:fontFamily="casual"
                    android:text="Buscar"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toTopOf="@+id/tviniRegistrarse"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.486"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etiniPass"
                    app:layout_constraintVertical_bias="0.0" />


            </LinearLayout>

            <EditText
                android:id="@+id/etMarca"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="32dp"
                android:ems="10"
                android:fontFamily="casual"
                android:hint="Marca"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/etPresentacion"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="32dp"
                android:ems="10"
                android:fontFamily="casual"
                android:hint="Presentacion"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <EditText
                android:id="@+id/etPrecioRef"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="48dp"
                android:ems="10"
                android:fontFamily="casual"
                android:hint="Precio Referencial"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.457"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <EditText
                android:id="@+id/etPreTienda"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="36dp"
                android:ems="10"
                android:fontFamily="casual"
                android:hint="Precio en tienda"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <EditText
                android:id="@+id/etCantidad"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:fontFamily="casual"
                android:hint="Cantidad"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/etProveedor"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:fontFamily="casual"
                android:hint="Proveedor"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <EditText
                android:id="@+id/etCategoria"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:fontFamily="casual"
                android:hint="Categoria"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btnRegistrarSQL"
                style="@style/botonNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:background="@drawable/shape"
                android:fontFamily="casual"
                android:text="Registrar Producto"
                android:textAlignment="center"
                app:layout_constraintBottom_toTopOf="@+id/tviniRegistrarse"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.486"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etiniPass"
                app:layout_constraintVertical_bias="0.0"
                android:layout_marginBottom="50dp"/>




        </LinearLayout>
    </ScrollView>

</RelativeLayout>